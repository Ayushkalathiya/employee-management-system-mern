<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
    integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
    crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Employee Management System</title>
    <style>
        nav{
          position: fixed;
          margin-top: 0.05rem !important;
        }
    </style>
</head>
<body>

    <header class="fixed-top">
        <div class="admin-logo">
            <i class="fas fa-user-shield"></i>
        </div>
        <div class="welcome-text">
            Welcome back , <%= id %>
        </div>
    </header>

    <nav>
        <a href="/emp/<%= id %>"><i class="fas fa-tachometer-alt"></i> Dashboard</a>
        <a href="/emp/<%= id %>/profile"><i class="fas fa-building"></i> my profile</a>
        <a href="#"><i class="fas fa-money-bill-wave"></i> Salary histroy</a>
        <a href="/emp/<%= id %>/leave"><i class="fas fa-clipboard-list"></i> Leave </a>
        <a href="/logout"><i class="fas fa-sign-out-alt"></i> Logout</a>
    </nav>

     <!-- success is Array -->
<% if(success && success.length){ %>
  <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
      <%= success %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>
  
  <!-- for error -->
<% if(error && error.length){ %>
  <div class="alert alert-danger alert-dismissible fade show  col-6 offset-3" role="alert">
      <%= error %>
      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %> 

    <div class="content mt-5">
        <!-- Content goes here -->
        <div class="container">
            <h2 class="text-center fw-bold">Leave History</h2>
            <table class="table table-striped">
              <thead>
                <tr>
                  <th scope="col">Sr. No.</th>
                  <th scope="col">Leave Type</th>
                  <th scope="col">From</th>
                  <th scope="col">To</th>
                  <!-- <th scope="col">Description</th> -->
                  <th scope="col">Applied Date</th>
                  <th scope="col">Status</th>
                </tr>
              </thead>
              <tbody>
                <!-- leave request data -->
                <% let n = 1 %>  
                <% for(let leave of leavereq){ %>
                  <tr>
                    <th scope="row"><%= n %></th>
                    <td><%= leave.leavetype %></td>
                    <td><%= leave.startdate.toDateString() %></td>
                    <td><%= leave.enddate.toDateString() %></td>
                    <!-- <td><%= leave.description %></td> -->
                    <td><%= leave.applieddate.toDateString() %></td>
                    <td><%= leave.status %></td>
                  </tr>
                  <% n++ %>    
                <% } %>
              </tbody>
            </table>
          </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
    crossorigin="anonymous"></script>

</body>
</html>

