<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Employee Management System</title>
  <!-- Bootstrap CSS -->
  <link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" 
  rel="stylesheet" 
  integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" 
  crossorigin="anonymous"
  >
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
  <style>
    /* Centering title */
    .title {
      display: flex;
      justify-content: center;
      margin-top: 5%;
    }

    /* Centering login card */
    .login-card {
      margin-top: 5%;
    }

    body {
      background-color: #f0f8ff; /* Light blue */
    }

    /* Responsive styles */
    @media (max-width: 992px) {
      .title h1 {
        font-size: 2rem; /* Medium size for medium screens */
      }
    }

    @media (max-width: 768px) {
      .title h1 {
        font-size: 1.5rem; /* Small size for small screens */
      }
      .login-card {
        margin-top: 20px; /* Adjust margin for login card on smaller screens */
      }
    }

  </style>
</head>
<body>

<div class="container">
  <!-- Title -->
  <div class="row">
    <div class="col-12 title">
      <h1>Employee Management System</h1>
    </div>
</div>

<% if(success && success.length){ %>
    <div class="alert alert-success alert-dismissible fade show mt-2 col-6 offset-3" role="alert">
        <%= success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
    
    <!-- for error -->
<% if(error && error.length){ %>
    <div class="alert alert-danger alert-dismissible fade show mt-2 col-6 offset-3" role="alert">
        <%= error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

  <!-- Login Form -->
  <div class="row justify-content-center login-card">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header bg-dark text-white text-center">
          <h3 class="card-title">Login</h3>
        </div>
        <div class="card-body">
          <form class="needs-validation"  action="/verify" method="POST" novalidate>
            <div class="form-group">
              <label for="username">Username</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-user mt-1 fa-lg h2"></i></span>
                </div>
                <input type="text" class="form-control" id="username" placeholder="Enter username" name="username" required>
                <div class="invalid-feedback">Please enter your username.</div>
              </div>
            </div>
            <div class="form-group mt-2">
              <label for="password">Password</label>
              <div class="input-group">
                <div class="input-group-prepend">
                  <span class="input-group-text"><i class="fas fa-lock fa-lg h2"></i></span>
                </div>
                <input type="password" class="form-control" id="password" name="password" placeholder="Enter password" required>
                <div class="invalid-feedback">Please enter your password.</div>
              </div>
            </div>
            <div class="form-group mt-2">
              <a href="/forgot" class="float-right mt-3 text-dark">Forgot password?</a>
            </div>
            <button type="submit" class="btn btn-dark mt-3 btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" 
crossorigin="anonymous"></script>



<script src="/js/script.js"></script>

</body>
</html>

